- 
    var navItems = [
        { title: 'Dashboard', path: '/', icon: 'icon-key' },
        { title: 'Product', path: '/', icon: 'icon-square' },
        { title: 'Customers', path: '/', icon: 'icon-user' },
        { title: 'Income', path: '/', icon: 'icon-wallet' },
        { title: 'Promote', path: '/', icon: 'icon-discount' },
        { title: 'Help', path: '/', icon: 'icon-question' }
    ]

nav.nav 
    ul.nav__list 
        each navItem, index in navItems 
            li.nav__item 
                a.nav__link(href= navItem.path class= index == 2 ? 'active' : '')
                    .nav__content
                        svg.nav__icon(width='2.4rem' height='2.4rem')
                            use(href=`/images/sprite/sprite.svg#icons_${navItem.icon}`)
                        | #{navItem.title}
                    svg.nav__icon(width='1.6rem' height='1.6rem')
                        use(href="/images/sprite/sprite.svg#icons_icon-chevron")


